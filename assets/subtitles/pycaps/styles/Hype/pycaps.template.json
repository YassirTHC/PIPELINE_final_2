{
  "css": "styles.css",
  "resources": "resources",
  "layout": {
    "max_width_ratio": 0.85,
    "max_number_of_lines": 2,
    "min_number_of_lines": 1,
    "vertical_align": { "align": "bottom", "offset": -0.10 }
  },
  "splitters": [
    { "type": "split_into_sentences" },
    { "type": "limit_by_chars", "min_chars": 10, "max_chars": 15 }
  ],
  "effects": [
    { "type": "remove_punctuation_marks", "punctuation_marks": ["."], "exception_marks": ["..."] },
    { "type": "emoji_in_segment", "chance_to_apply": 0.85, "align": "random", "max_uses_of_each_emoji": 1 },
    { "type": "animate_segment_emojis" }
  ],
  "animations": [
    { "type": "narrate_by_words" },
    { "type": "wipe_in_segment", "duration": 0.30 }
  ]
}
