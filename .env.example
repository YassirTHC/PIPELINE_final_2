# Sample environment variables for the video pipeline
# Copy this file to .env and fill in your own API keys when needed.

# B-roll API keys
PEXELS_API_KEY=your_pexels_api_key_here
PIXABAY_API_KEY=your_pixabay_api_key_here
GIPHY_API_KEY=your_giphy_api_key_here

# B-roll fetch configuration
BROLL_FETCH_ENABLE=1
BROLL_FETCH_PROVIDER=pixabay,pexels
AI_BROLL_FETCH_PROVIDER=pixabay,pexels
BROLL_FETCH_ALLOW_VIDEOS=1
BROLL_FETCH_ALLOW_IMAGES=1
FETCH_MAX=8
BROLL_FETCH_MAX_PER_KEYWORD=8
BROLL_PEXELS_MAX_PER_KEYWORD=3

# Cleanup behaviour
BROLL_DELETE_AFTER_USE=1
BROLL_PURGE_AFTER_RUN=1

# Optional: override pipeline LLM runtime
PIPELINE_LLM_PROVIDER=ollama
PIPELINE_LLM_ENDPOINT=http://localhost:11434
PIPELINE_LLM_MODEL_TEXT=qwen3:8b
PIPELINE_LLM_MODEL_JSON=qwen3:8b
PIPELINE_LLM_FORCE_NON_STREAM=1
PIPELINE_LLM_JSON_MODE=1
PIPELINE_LLM_TIMEOUT_S=60
PIPELINE_LLM_FALLBACK_TIMEOUT_S=30
