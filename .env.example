# Variables d'environnement pour le pipeline vidéo
# Copiez ce fichier vers .env et remplissez vos clés API

# Clés API B-roll
PEXELS_API_KEY=your_pexels_api_key_here
PIXABAY_API_KEY=your_pixabay_api_key_here
GIPHY_API_KEY=your_giphy_api_key_here

# Configuration pipeline
BROLL_FETCH_ENABLE=True
BROLL_FETCH_PROVIDER=pexels
BROLL_FETCH_ALLOW_VIDEOS=True
BROLL_FETCH_ALLOW_IMAGES=False
BROLL_FETCH_MAX_PER_KEYWORD=8

# Configuration nettoyage
BROLL_DELETE_AFTER_USE=True
BROLL_PURGE_AFTER_RUN=True
